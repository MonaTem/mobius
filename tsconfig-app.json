{
	"include": [
		"types/reduced-dom.d.ts",
		"types/ambient.d.ts",
		"src/*.tsx",
		"src/*.ts"
	],
	"compilerOptions": {
		"baseUrl": "./",
		"allowJs": false,
		"jsx": "react",
		"jsxFactory": "dom.h",
		"strict": true,
		"strictNullChecks": true,
		"noUnusedLocals": true,
		"noImplicitThis": true,
		"module": "ES6",
		"moduleResolution": "node",
		"target": "es2017",
		"downlevelIteration": false,
		"types": [],
		"lib": [
			"es5",
			"es2015.promise"
		],
		"paths": {
			"*": [
				"src/*",
				"types/*",
				"api/*"
			]
		}
	}
}