{
	"include": [
		"client/*.ts",
		"client/*.tsx",
		"common/**/*.ts",
		"common/**/*.tsx"
	],
	"compilerOptions": {
		"baseUrl": "./",
		"outDir": "build/.client/",
		"allowJs": false,
		"declaration": true,
		"declarationDir": "types",
		"jsx": "react",
		"jsxFactory": "dom.h",
		"strict": true,
		"strictNullChecks": true,
		"noUnusedLocals": true,
		"noImplicitThis": true,
		"allowUnusedLabels": true,
		"module": "ES6",
		"moduleResolution": "node",
		"target": "es5",
		"downlevelIteration": false,
		"types": [],
		"lib": [
			"es5",
			"dom",
			"es2015.promise"
		],
		"paths": {
			"*": [
				"client/*",
				"common/*",
				"types/*"
			]
		}
	}
}