{
	"compilerOptions": {
		"baseUrl": "./",
		"allowJs": false,
		"declaration": true,
		"declarationDir": "types",
		"sourceMap": true,
		"jsx": "react",
		"jsxFactory": "dom.h",
		"strict": true,
		"strictNullChecks": true,
		"noUnusedLocals": true,
		"noImplicitThis": true,
		"allowUnusedLabels": true,
		"module": "ES6",
		"moduleResolution": "node",
		"target": "es2017",
		"downlevelIteration": false,
		"types": [
			"node",
			"preact"
		],
		"typeRoots": [
			"types",
			"node_modules/@types"
		],
		"lib": [
			"es6",
			"es2015.promise"
		],
		"paths": {
			"*": [
				"server/*",
				"common/*",
				"types/*"
			]
		}
	}
}