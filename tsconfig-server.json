{
	"include": [
		"api/concurrence-server.ts",
		"api/**/*-server.ts",
		"api/**/*-server.js",
		"api/**/*.ts",
		"api/**/*.js",
		"src/**/*.ts",
		"src/**/*.js"
	],
	"exclude": [
		"api/**/*-client.ts",
		"api/**/*-client.js"
	],
	"compilerOptions": {
		"baseUrl": "./",
		"outFile": "build/server.js",
		"allowJs": true,
		"strict": true,
		"strictNullChecks": true,
		"noUnusedLocals": true,
		"noImplicitThis": true,
		"module": "none",
		"target": "es2017",
		"downlevelIteration": false,
		"lib": [
			"es6",
			"es2015.promise"
		],
		"types": [
			"node"
		]
	}
}