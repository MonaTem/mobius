{
	"include": [
		"types/reduced-dom.d.ts",
		"host/*.ts",
		"host/*.js",
		"mobius.ts"
	],
	"exclude": [
		"node_modules/"
	],
	"compilerOptions": {
		"baseUrl": "./",
		"outDir": "dist/",
		"allowJs": true,
		"declaration": false,
		"jsx": "react",
		"jsxFactory": "dom.h",
		"strict": true,
		"strictNullChecks": true,
		"noUnusedLocals": true,
		"noImplicitThis": true,
		"allowUnusedLabels": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"target": "es2017",
		"downlevelIteration": false,
		"types": [
			"node"
		],
		"typeRoots": [
			"types",
			"node_modules/@types"
		],
		"lib": [
			"es6",
			"es2015.promise"
		],
		"paths": {
			"*": [
				"server/*",
				"common/*",
				"types/*"
			]
		}
	}
}